<script>
  document.addEventListener("DOMContentLoaded", function () {
    const contactForm = document.getElementById("contactForm");

    contactForm.addEventListener("submit", function (event) {
      event.preventDefault();

      // Validate form fields
      if (!validateForm()) {
        return;
      }

      // If the form is valid, submit it
      contactForm.submit();
    });

    function validateForm() {
      let isValid = true;

      const name = document
        .getElementById("name")
        .value
        .trim();
      const email = document
        .getElementById("email")
        .value
        .trim();
      const phone = document
        .getElementById("phone")
        .value
        .trim();
      const existingClient = document
        .getElementById("existingClient")
        .value
        .trim();
      const checkboxesContact = document.querySelectorAll('input[name="contact[]"]:checked');
      const checkboxesServices = document.querySelectorAll('input[name="services[]"]:checked');
      const message = document
        .getElementById("message")
        .value
        .trim();

      // Clear previous error messages
      clearErrorMessages();

      if (name === "") {
        isValid = false;
        displayErrorMessage("name", "Please enter your name");
      }

      if (email === "" || !isValidEmail(email)) {
        isValid = false;
        displayErrorMessage("email", "Please enter a valid email address");
      }

      if (phone === "") {
        isValid = false;
        displayErrorMessage("phone", "Please enter your phone number");
      }

      if (existingClient === "") {
        isValid = false;
        displayErrorMessage("existingClient", "Please indicate if you're an existing client");
      }

      if (checkboxesContact.length === 0) {
        isValid = false;
        displayErrorMessage("contact-error", "Please select at least one contact method");
      }

      if (checkboxesServices.length === 0) {
        isValid = false;
        displayErrorMessage("checkboxes-error", "Please select at least one service you need help with");
      }

      if (message === "") {
        isValid = false;
        displayErrorMessage("message", "Please provide some details");
      }

      return isValid;
    }

    function isValidEmail(email) {
      // Simple email validation regex, customize as needed
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }

    function displayErrorMessage(fieldId, message) {
      const errorElement = document.getElementById(`${fieldId}-error`);
      if (errorElement) {
        errorElement.textContent = message;
        errorElement
          .classList
          .remove("hidden");
        errorElement
          .classList
          .add("block");
      }
    }

    function clearErrorMessages() {
      const errorElements = document.querySelectorAll(".error");
      errorElements.forEach((element) => {
        element.textContent = "";
        element
          .classList
          .remove("block");
        element
          .classList
          .add("hidden");
      });
    }
  });
</script>

